<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.semestermanager.Ass">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"

        android:ems="10"
        android:id="@+id/editTextA"
        android:layout_marginTop="83dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Date"
        android:id="@+id/buttonAA"
android:onClick="setDate"
        android:layout_below="@+id/editTextA"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="73dp"
        android:layout_alignRight="@+id/editTextA"
        android:layout_alignEnd="@+id/editTextA" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/buttonchu"
        android:onClick="add1"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/buttonAA"
        android:layout_alignEnd="@+id/buttonAA"
        android:layout_marginRight="239dp"
        android:layout_marginEnd="239dp" />


</RelativeLayout>
